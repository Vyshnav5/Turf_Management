@model Register

@{
    Layout = "~/Views/Shared/Login_Layout.cshtml";
}

<h2>Customer Registration</h2>

<form  method="post">
    <input type="hidden" asp-for="L_type" value="Customer" />
    <div class="form-group">
        <label asp-for="C_name" class="control-label"></label>
        <input asp-for="C_name" class="form-control" />
        <span asp-validation-for="C_name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="C_ph" class="control-label"></label>
        <input asp-for="C_ph" class="form-control" />
        <span asp-validation-for="C_ph" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="L_email" class="control-label"></label>
        <input asp-for="L_email" class="form-control" />
        <span asp-validation-for="L_email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="L_password" class="control-label"></label>
        <input asp-for="L_password" class="form-control" />
        <span asp-validation-for="L_password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" asp-controller="Login" asp-action="Cust_Reg" class="btn btn-primary">Register</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
